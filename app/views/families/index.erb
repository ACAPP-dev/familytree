<h1>Listing of Families</h1>

   <table>
      <tr>
         <th>Family Code</th>
         <th>Family Name</th>
         <th>Description</th>
         <th>View Family</th>
         <th>View Family Members</th>
         <th>Add New Family Member</th>
      </tr>

    <% @families.each do |family| %>
      <tr>
         <td><a href="/families/<%= family.id %>"><%= family.family_code %></a></td>
         <td><%= family.surname %></td>
         <td><%= family.description %></td>
         <td><a class="med_button" href="/families/<%= family.id %>">View Family Details</a></td>
         <td><a class="med_button" href="/familymembers/family/<%= family.id %>">View Family Members</a></td>
         <td><a class="med_button" href="/familymembers/new/<%= family.id %>">Create New Family Member</a></td>
      </tr> 
    <% end %>

    </table>