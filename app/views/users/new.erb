<h1>Create New User</h1>

<p class="flash"><%= flash[:message] %></p>

<form action="/users" method="POST">
    <div>
        <p>First Name*: <input type="text" name="user[first_name]" /></p>
        <p>Last Name: <input type="text" name="user[last_name]" /></p>
        <p>Email*: <input type="email" name="user[email]" /></p>
        <br>
        <p>Username*: <input type="text" name="user[username]" /></p>
        <p>Password*: <input type="password" name="user[password]" /></p>
        <br>
        <br>
        <input type="submit" value="Create User">
        <br>
        <p>* Required Fields</p>
    </div>
</form>